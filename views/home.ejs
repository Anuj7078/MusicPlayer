        <div class="song-box" onclick="playPause('trending-song3')" id="ts3"></div>
        <div class="song-box" onclick="playPause('trending-song4')" id="ts4"></div>
        <div class="song-box" onclick="playPause('trending-song5')" id="ts5"></div>
        </div>
    </section>

    <section id="new-releases">
        <h2>New Releases</h2>
        <div class="songs">
        <div class="song-box" onclick="playPause('new-song1')" id="nw1"></div>
        <div class="song-box" onclick="playPause('new-song2')" id="nw2"></div>
        <div class="song-box" onclick="playPause('new-song3')" id="nw3"></div>
        <div class="song-box" onclick="playPause('new-song4')" id="nw4"></div>
        <div class="song-box" onclick="playPause('new-song5')" id="nw5"></div>
        </div>
    </section>

    <section id="top-charts">
        <h2>Top Charts</h2>
        <div class="songs">
        <div class="song-box" onclick="playPause('top-song1')" id="tc1"></div>
        <div class="song-box" onclick="playPause('top-song2')" id="tc2"></div>
        <div class="song-box" onclick="playPause('top-song3')" id="tc3"></div>
        <div class="song-box" onclick="playPause('top-song4')" id="tc4"></div>
        <div class="song-box" onclick="playPause('top-song5')" id="tc5"></div>
    </div>
    <div class="container2">
        <h1>Listen Songs According to Your Mood</h1>
        <form method="get" action="/mood">
            <button class="btn" type="submit">Let's Go</button>
        </form>
      </div>
    </section>
    <script src="/js/home-script.js"></script>
    <audio id="trending-song1" src="/songs/leke prabhu.mp3"></audio>
    <audio id="trending-song2" src="/songs/kaalastar.mp3"></audio>
