    <audio id="trending-song5" src="/songs/Gustakhiyan.mp3"></audio>

    <audio id="new-song1" src="/songs/arjan.mp3"></audio>
    <audio id="new-song2" src="/songs/urvashi.mp3"></audio>
    <audio id="new-song3" src="/songs/fanaar.mp3"></audio>
    <audio id="new-song4" src="/songs/leke prabhu.mp3"></audio>
    <audio id="new-song5" src="/songs/satranga.mp3"></audio>

    <audio id="top-song1" src="/songs/ram siya ram.mp3"></audio>
